<Window x:Class="Eindopdracht.View.Gesprekken"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Eindopdracht.View"
        mc:Ignorable="d"
        Title="Gesprekken" Height="450" Width="800">
    <Grid RenderTransformOrigin="0.594,0.539">

        <Rectangle HorizontalAlignment="Left"  
            VerticalAlignment="Stretch" Height="Auto"  Width="200" Fill="#FF379AE6" />
        <Image Margin="20,34,624,357" Source="source/Image/Idea-X_logo.jpg" Stretch="Fill"/>
        <Label Cursor="Hand" MouseLeftButtonDown="Open_Home" Content="Home" HorizontalAlignment="Left" Margin="51,139,0,0" VerticalAlignment="Top" Background="{x:Null}" FontFamily="Arial Black" Foreground="White" Height="34" Width="109" FontSize="24" />
        <Label Cursor="Hand" MouseLeftButtonDown="Open_Gesprekken"  Content="Gesprekken" HorizontalAlignment="Left"  Margin="44,180,0,0" VerticalAlignment="Top" Background="{x:Null}" FontFamily="Arial Black" Foreground="White" Height="36" Width="154" FontSize="22" />
        <Label Cursor="Hand" MouseLeftButtonDown="Open_Account" Content="Account&#xA;preken" HorizontalAlignment="Left" Margin="51,217,0,0" VerticalAlignment="Top" Background="{x:Null}" FontFamily="Arial Black" Foreground="White" Height="39" Width="125" FontSize="22" />
        <Label Cursor="Hand" MouseLeftButtonDown="Open_Database" Content="Database" HorizontalAlignment="Left" Margin="51,255,0,0" VerticalAlignment="Top" Background="{x:Null}" FontFamily="Arial Black" Foreground="White" Height="39" Width="125" FontSize="22" />

        <Image Margin="17,143,754,265" Source="source/Image/Home.png" />
        <Image Margin="18,182,756,225" Source="source/Image/Message.png" />
        <Image Margin="14,221,752,182" Source="source/Image/account.png" Stretch="Fill"/>
        <Image Margin="16,263,754,148" Source="source/Image/Database.png" Stretch="Fill"/>
        <Button x:Name="btnOphangen" Content="Uitloggen"
     Margin="10,0,0,40"
     Background="#DE3B40"
     Foreground="White"
     FontWeight="Bold"
     FontSize="10"
     Padding="10,5" 
     HorizontalAlignment="Left"
     VerticalAlignment="Bottom"
     Width="185" 
     Height="50"
     FontFamily="Bahnschrift" 
     Click="btnOphangen_Click"  >

            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Background="{TemplateBinding Background}" 
                             CornerRadius="5"
                             Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center"
                                 VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
        </Button>


        <Image Margin="18,20,642,371" Source="Idea-X_logo.jpg" Stretch="Fill"/>
        <Image Margin="10,124,761,283" Source="../source/Image/Home.png" Stretch="Fill"/>
        <Image Margin="10,164,764,243" Source="../source/Image/Message.png" Stretch="Fill" RenderTransformOrigin="-0.145,0.582"/>
        <Image Margin="6,202,760,200" Source="../source/Image/account.png" Stretch="Fill"/>
        <Image Margin="8,244,764,166" Source="../source/Image/Database.png" Stretch="Fill"/>
        <Label Content="Live Calls" HorizontalAlignment="Left" Margin="445,25,0,0" VerticalAlignment="Top" Height="33" Width="144" FontWeight="Bold" FontFamily="Arial Black" FontSize="20"/>
        <Label Content="Gesprekken &#xD;&#xA;24 U" HorizontalAlignment="Left" Margin="205,20,0,0" VerticalAlignment="Top" Height="56" Width="155" FontWeight="Bold" FontFamily="Arial Black" FontSize="20"/>
        <Label x:Name="lblGesprekVandaag" Content="" HorizontalAlignment="Left" Margin="242,74,0,0" VerticalAlignment="Top" Height="63" Width="118" FontWeight="Bold" FontFamily="Arial Black" FontSize="40" RenderTransformOrigin="1.683,0.604"/>
        <Label x:Name="lblLivecalls" Content="" HorizontalAlignment="Left" Margin="486,79,0,0" VerticalAlignment="Top" Height="49" Width="126" FontWeight="Bold" FontFamily="Arial Black" FontSize="40" RenderTransformOrigin="1.683,0.604">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.071"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <DataGrid ItemsSource="{Binding Calls}" AutoGenerateColumns="False" Margin="218,162,82,40" >
            <DataGrid.Columns>
                <!-- CallInfo Column -->
                <DataGridTextColumn Header="Call Info" Binding="{Binding CallInfo}" Width="*"/>

                <!-- IsClosed Column -->
                <DataGridCheckBoxColumn Header="Is Closed" Binding="{Binding IsClosed}" Width="Auto"/>

                <!-- Datetime Column -->
                <DataGridTextColumn Header="Datetime" Binding="{Binding Datetime}" Width="*"/>

                <!-- Action Button -->
                <DataGridTemplateColumn Header="Action" Width="Auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Details" Click="DetailsButton_Click" Tag="{Binding CallInfo}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>
        </DataGrid>
        <Label x:Name="lblLastReceived" Content="Last Received: " HorizontalAlignment="Left" Margin="601,32,0,0" VerticalAlignment="Top" Height="26" Width="144" FontFamily="Bahnschrift Light" FontSize="9"/>
        <Rectangle x:Name="RctStatus" HorizontalAlignment="Left" Height="20" Margin="765,28,0,0"  VerticalAlignment="Top" Width="20" Fill="#FF756A6A" RadiusX="15" RadiusY="15" RenderTransformOrigin="2,0.502"/>

    </Grid>
</Window>
