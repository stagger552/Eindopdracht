        <Rectangle x:Name="RndAdres" HorizontalAlignment="Left" Height="20" Margin="725,122,0,0"  VerticalAlignment="Top" Width="20" Fill="Green" RadiusX="15" RadiusY="15" RenderTransformOrigin="2,0.502"/>
        <Label x:Name="lblAdres" Content="✓" HorizontalAlignment="Left" FontSize="10" Foreground="White" Margin="725,119,0,0" VerticalAlignment="Top" Height="23" Width="18" RenderTransformOrigin="1,0.502"/>

        <Rectangle x:Name="RndGeldig" HorizontalAlignment="Left" Height="20" Margin="725,149,0,0" VerticalAlignment="Top" Width="20" Fill="Green" RadiusX="15" RadiusY="15" RenderTransformOrigin="2,0.502"/>
        <Label x:Name="lblGeldig" Content="✓" HorizontalAlignment="Left" FontSize="10" Foreground="White" Margin="725,149,0,0" VerticalAlignment="Top" Height="23" Width="17" RenderTransformOrigin="1,0.502"/>
        <Rectangle x:Name="RndGeldig_Copy" HorizontalAlignment="Left" Height="20" Margin="725,176,0,0"  VerticalAlignment="Top" Width="20" Fill="Green" RadiusX="15" RadiusY="15" RenderTransformOrigin="2,0.502"/>
        <Label x:Name="lblGeldig_Copy" Content="✓" HorizontalAlignment="Left" FontSize="10" Foreground="White" Margin="725,176,0,0" VerticalAlignment="Top" Height="23" Width="17" RenderTransformOrigin="1,0.502"/>
        <Rectangle x:Name="RndGeldig_Copy1" HorizontalAlignment="Left" Height="20" Margin="725,199,0,0"  VerticalAlignment="Top" Width="20" Fill="#DE3B40" RadiusX="15" RadiusY="15" RenderTransformOrigin="2,0.502"/>
        <Label x:Name="lblGeldig_Copy1" Content="X" HorizontalAlignment="Left" FontSize="10" Foreground="White" Margin="725,199,0,0" VerticalAlignment="Top" Height="23" Width="17" RenderTransformOrigin="1,0.502"/>
        <Rectangle x:Name="RndGeldig_Copy2" HorizontalAlignment="Left" Height="20" Margin="725,224,0,0"  VerticalAlignment="Top" Width="20" Fill="#DE3B40" RadiusX="15" RadiusY="15" RenderTransformOrigin="2,0.502"/>
        <Label x:Name="lblGeldig_Copy2" Content="X" HorizontalAlignment="Left" FontSize="10" Foreground="White" Margin="725,224,0,0" VerticalAlignment="Top" Height="23" Width="20" RenderTransformOrigin="1,0.502"/>


        <Button x:Name="btnOphangen" Content="Ophangen"
                Margin="565,333,135,0"
                Background="#DE3B40"
                Foreground="White"
                FontWeight="Bold"
                FontSize="10"
                Padding="10,5"  VerticalAlignment="Top" MaxWidth="200" MinWidth="100" Height="50" Width="100" FontFamily="Bahnschrift" Click="btnOphangen_Click_1">
            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="5"
                                    Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
        </Button>
        <Button x:Name="btnOpnemen" Content="Doorsturen"
            Margin="670,333,30,0"
            Background="#1DD75B"
            Foreground="White"
            FontSize="10"
            Padding="10,5"  VerticalAlignment="Top" Width="100" Height="51" FontFamily="Bahnschrift" Click="btnOpnemen_Click">
            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="5"
                                    Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
        </Button>
        <Button x:Name="btnOphangen_Copy" 
            Margin="565,274,135,0"
            Background="#379AE6"
            Foreground="White"
            FontWeight="Bold"
            FontSize="10"
            Padding="10,5"  
            VerticalAlignment="Top"  
            Height="50" 
            Width="100"
            FontFamily="Bahnschrift" Click="btnOphangen_Copy_Click" 
            >

            <StackPanel Orientation="Horizontal">

            </StackPanel>

            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="5"
                                    Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
        </Button>
        <TextBox 
            x:Name="txtExternalBericht"
            Margin="190,379,355,0"
            TextWrapping="Wrap"
            VerticalAlignment="Top"
            
            Height="25"
MaxWidth="400px"
            Padding="5"
            BorderBrush="#379AE6"
            BorderThickness="2" 
            Foreground="Black"
            MinWidth="100px" >
            <TextBox.Style>
                <Style TargetType="{x:Type TextBox}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type TextBox}">
                                <Border  
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}" 
                                    CornerRadius="5"
                                >
                                    <ScrollViewer x:Name="PART_ContentHost"/>
                                </Border>

                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TextBox.Style>
        </TextBox>
        <Button x:Name="btnVersturen" 
            Margin="450,379,250,30"
            Background="#379AE6"
            Foreground="White"
            FontWeight="Bold"
            FontSize="10"
            Width="100"
            Content="Verstuur"
            Padding="10,5" Height="25" FontFamily="Bahnschrift" RenderTransformOrigin="0.5,1.401" Click="btnVersturen_Click"  >
            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="5"
                                    Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
        </Button>
        <Label Content="CallID:" FontSize="30" FontWeight="Bold" HorizontalAlignment="Left" Margin="193,14,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblCallID" Content="" FontSize="30"  HorizontalAlignment="Left" Margin="300,16,0,0" VerticalAlignment="Top" FontStyle="Oblique" FontFamily="Bahnschrift" Width="365"/>
        <Rectangle HorizontalAlignment="Left"  
            Height="Auto"  Width="177" Fill="#FF379AE6" />
        <Image Margin="18,34,644,357" Source="source/Image/Idea-X_logo.jpg" Stretch="Fill"/>
        <Label Cursor="Hand" MouseLeftButtonDown="Open_Home" Content="Home" HorizontalAlignment="Left" Margin="22,133,0,0" VerticalAlignment="Top" Background="{x:Null}" FontFamily="Arial Black" Foreground="White" Height="34" Width="98" FontSize="24" />
        <Label Cursor="Hand" MouseLeftButtonDown="Open_Gesprekken"  Content="Gesprekken" HorizontalAlignment="Left"  Margin="16,174,0,0" VerticalAlignment="Top" Background="{x:Null}" FontFamily="Arial Black" Foreground="White" Height="36" Width="157" FontSize="22" />
        <Label Cursor="Hand" MouseLeftButtonDown="Open_Account" Content="Account&#xA;preken" HorizontalAlignment="Left" Margin="22,211,0,0" VerticalAlignment="Top" Background="{x:Null}" FontFamily="Arial Black" Foreground="White" Height="39" Width="112" FontSize="22" />
        <Label Cursor="Hand" MouseLeftButtonDown="Open_Database" Content="Database" HorizontalAlignment="Left" Margin="22,249,0,0" VerticalAlignment="Top" Background="{x:Null}" FontFamily="Arial Black" Foreground="White" Height="39" Width="112" FontSize="22" />
        <Button x:Name="btnOphangen_Copy2" Content="Uitloggen"
            Margin="9,0,0,40"
            Background="#DE3B40"
            Foreground="White"
            FontWeight="Bold"
            FontSize="10"
            Padding="10,5" 
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Width="164" 
            Height="50"
            FontFamily="Bahnschrift" 
            Click="btnOphangen_Click"  >

            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="5"
                                    Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
        </Button>
        <Image Margin="16,20,660,371" Source="/View/Idea-X_logo.jpg" Stretch="Fill"/>
        <Label Content="CallID:" FontSize="30" FontWeight="Bold" HorizontalAlignment="Left" Margin="193,14,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnOpnemen_Copy" Content="JSON Bekijken"
            Margin="670,274,30,0"
            Background="#379AE6"
            Foreground="White"
            FontSize="10"
            Padding="10,5"  VerticalAlignment="Top" Width="100" Height="51" FontFamily="Bahnschrift">
            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="5"
                                    Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
        </Button>

    </Grid>
</Window>
