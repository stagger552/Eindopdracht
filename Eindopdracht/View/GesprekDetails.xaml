        <Label Content="Afspraak" HorizontalAlignment="Left" Margin="590,225,0,0" VerticalAlignment="Top" Height="22" Width="55" FontSize="10" FontFamily="Bahnschrift"/>

        <Rectangle x:Name="RndNaam" HorizontalAlignment="Left" Height="20" Margin="725,99,0,0"  VerticalAlignment="Top" Width="20" Fill="Green" RadiusX="15" RadiusY="15" RenderTransformOrigin="2,0.502"/>
